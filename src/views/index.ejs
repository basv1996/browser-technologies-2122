                        <option value="XL" <%if(shirtInData){%> <%if(shirtInData.shirtSize == "XL") { %>selected<%}} %>  >XL</option>
                        <option value="XXL" <%if(shirtInData){%> <%if(shirtInData.shirtSize == "XXL") { %>selected<%}} %>  >XXL</option>
                    </select>
                    </fieldset>
                        <fieldset>
